<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:layout_editor_absoluteX="32dp"
    tools:layout_editor_absoluteY="2dp">

    <TextView
        android:id="@+id/nuevas_pistas_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevas pistas"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inicio_tv"
        app:layout_constraintVertical_bias="0.019" />

    <TextView
        android:id="@+id/inicio_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/upgrade_btn"
        android:layout_width="96dp"
        android:layout_height="35dp"
        android:background="#000000"
        android:letterSpacing="0.1"
        android:text="UPGRADE"
        android:textColor="@color/sc"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toEndOf="@+id/inicio_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/cast_btn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="#000000"
        android:drawableBottom="@drawable/cast"
        android:text="cast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.162"
        app:layout_constraintStart_toEndOf="@+id/upgrade_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/msg_btn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="#000000"
        android:drawableBottom="@drawable/baseline_mail_outline_24"
        android:text="message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/upload_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/upload_btn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="#000000"
        android:drawableBottom="@drawable/baseline_upload_24"
        android:text="upload"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/cast_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/notif_btn"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="#000000"
        android:drawableBottom="@drawable/baseline_notifications_24"
        android:text="notification"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/msg_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <HorizontalScrollView
        android:layout_width="369dp"
        android:layout_height="122dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.308"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157">

        <!-- using linear layout to store multiple view
             inside a Horizontal Scroll View -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/list1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo1"
                    android:layout_width="79dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/phonk_logo" />

                <TextView
                    android:id="@+id/name1"
                    android:layout_width="79dp"
                    android:layout_height="42dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="PHONK"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/list2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo2"
                    android:layout_width="79dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/street_logo" />

                <TextView
                    android:id="@+id/name2"
                    android:layout_width="79dp"
                    android:layout_height="42dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="STREET PHONK RECORDS"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/list3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo3"
                    android:layout_width="79dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/tribal_logo" />

                <TextView
                    android:id="@+id/name3"
                    android:layout_width="79dp"
                    android:layout_height="42dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="TRIBAL TRAP"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/list4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo4"
                    android:layout_width="79dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kaito_logo" />

                <TextView
                    android:id="@+id/name4"
                    android:layout_width="79dp"
                    android:layout_height="42dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="KAITO"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/list5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo5"
                    android:layout_width="79dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/zapp_logo" />

                <TextView
                    android:id="@+id/name5"
                    android:layout_width="79dp"
                    android:layout_height="42dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="ZAPP BEATS"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/list6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logo6"
                    android:layout_width="79dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/jzvk9_logo" />

                <TextView
                    android:id="@+id/name6"
                    android:layout_width="79dp"
                    android:layout_height="42dp"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="JZVK9"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>